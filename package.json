{
	"name": "crt",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "alchemy dev",
		"build": "pnpm -r build",
		"check-types": "pnpm -r check-types",
		"dev:native": "pnpm --filter native dev",
		"dev:web": "pnpm --filter web dev",
		"dev:server": "pnpm --filter server dev",
		"db:push": "pnpm --filter @crt/db db:push",
		"db:generate": "pnpm --filter @crt/db db:generate",
		"deploy": "alchemy deploy",
		"destroy": "alchemy destroy"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"@types/node": "^22.13.11",
		"alchemy": "^0.77.0",
		"@cloudflare/workers-types": "^4.20250822.0"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "pnpm@10.4.1"
}
